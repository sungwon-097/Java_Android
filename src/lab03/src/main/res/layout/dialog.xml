<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/text_debug2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rsa"
        android:layout_below="@+id/text_debug"
        android:layout_alignLeft="@id/text_debug"
        />
    <TextView
        android:id="@+id/mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44:DD:SS:FA:EG"
        android:layout_below="@id/text_debug2"
        android:layout_alignLeft="@id/text_debug2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="allow"
        android:layout_below="@id/mac"
        android:layout_alignEnd="@id/mac"
        />

</RelativeLayout>